{% extends 'TimesheetHrBundle:Default:base.html.twig' %}
{% block title %}{{ title }}{% endblock %}
{% block header %}{% endblock %}
{% block content %}
<div class="message">
{% if message is defined and message|length %}
<div class="loginMessage">{{ message }}</div>
{% endif %}
</div>
{% if locationForm is defined and locationForm|length %}
<div class="registrationList">
<h2>Location</h2>
{{ include('TimesheetHrBundle:Includes:location_form.html.twig', { 'form': locationForm, 'members': members, 'domainId': domainId }) }}
</div>
{% else %}
<div class="statusList">
{{ render(controller('TimesheetHrBundle:Default:locationmenu', { 'base': base })) }}
</div>
{% endif %}
{% endblock %}