<h2>Modules</h2>
{% if modules is defined and modules|length %}
<table>
	<tr>
		<th>Name</th>
		{% if domainId is defined and domainId > 0 %}{% else %}<th>Company</th>{% endif %}
	</tr>
	{% for m in modules %}
	<tr>
		<td><a href="{{ path(base, {'action': 'editmodule', 'param1': m.id }) }}" title="Click here to edit">{{ m.name }}</a></td>
		{% if domainId is defined and domainId > 0 %}
		{% else %}
			<td>
				{% if m.domains is defined and m.domains|length %}
					{% for d in m.domains %}
						{% if companies[d] is defined and companies[d]|length %}
							{{ companies[d] }}<br>
						{% else %}
							[{{ d }}]
						{% endif %}
					{% endfor %}
				{% else %}
				-
				{% endif %}
			</td>
		{% endif %}
	</tr>
	{% endfor %}
</table>
{% endif %}
<hr>