{% if form is defined and form|length %}
{{ form_start(form) }}
{{ form_errors(form) }}
<table>
	<tr>
		<td>{{ form_label(form.username) }}</td>
		<td>{{ form_errors(form.username) }}{{ form_widget(form.username) }}</td>
	</tr>
	<tr>
		<td>{{ form_label(form.date) }}</td>
		<td>{{ form_errors(form.date) }}{{ form_widget(form.date) }}</td>
	</tr>
	<tr>
		<td>{{ form_label(form.comment) }}</td>
		<td>{{ form_errors(form.comment) }}{{ form_widget(form.comment) }}</td>
	</tr>
</table>
{{ form_widget(form._token) }}
{{ form_end(form) }}
{% endif %}
