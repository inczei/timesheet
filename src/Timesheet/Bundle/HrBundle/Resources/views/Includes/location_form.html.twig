<script>
var myInterval=setInterval(function() {
	if (typeof(getLocation) == 'function' && $('#coordinates') != 'undefined') {
		var formatText='<span>Current position</span><br/><span id="latitude">%lat</span>, <span id="longitude">%lon</span> (<a href="http://maps.google.com?q=%lat,%lon" target="_blank">map</a>)';
		getLocation('coordinates', formatText, {{ domainId }});
		clearInterval(myInterval);
	}	
}, 200);
</script>