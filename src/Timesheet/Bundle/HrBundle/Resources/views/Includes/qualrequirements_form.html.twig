<p><u>{{ shiftTitle }}</u></p>
{{ form_start(form) }}
{{ form_errors(form) }}
{% if list is defined and list|length %}
<table>
	<tr>
		<th>Qualification</th>
		<th>Min.level</th>
		<th>No.of Staff</th>
		<th></th>
	</tr>
	{% for l in list %}
	<tr>
		<td>{{ l.name }}</td>
		<td>{% if l.level is defined and l.level|length %}{{ l.level }}{% else %}???{% endif %}</td>
		<td>{{ l.numberOfStaff }}</td>
		<td>{{ form_widget(form.children['delete_'~l.qualificationId]) }}</td>
	</tr>
	{% endfor %}
	{% if form.delete is defined %}
	<tr>
		<td></td>
		<td colspan="3">{{ form_widget(form.delete, { 'attr': {'tabindex': '6'}}) }}</td>
	</tr>
	{% endif %}
	<tr>
		<td colspan="4"><hr></td>
	</tr>
</table>
{% endif %}
<table>
{% if form.qualificationId is defined %}
	<tr>
		<td>{{ form_label(form.qualificationId) }}{{ form_errors(form.qualificationId) }}</td>
		<td>{{ form_widget(form.qualificationId, { 'attr': {'tabindex': '1'}}) }}</td>
	</tr>
{% endif %}
{% if form.levelId is defined %}
	<tr>
		<td>{{ form_label(form.levelId) }}{{ form_errors(form.levelId) }}</td>
		<td>{{ form_widget(form.levelId, { 'attr': {'tabindex': '2'}}) }}</td>
	</tr>
{% endif %}
{% if form.numberOfStaff is defined %}
	<tr>
		<td>{{ form_label(form.numberOfStaff) }}{{ form_errors(form.numberOfStaff) }}</td>
		<td>{{ form_widget(form.numberOfStaff, { 'attr': {'tabindex': '3'}}) }}</td>
	</tr>
{% endif %}
	<tr>
		<td>{{ form_widget(form.cancel, { 'attr': {'tabindex': '5'}}) }}</td>
		<td>{% if form.submit is defined %}{{ form_widget(form.submit, { 'attr': {'tabindex': '4'}}) }}{% endif %}</td>
	</tr>
</table>
{{ form_widget(form.shiftId) }}
{{ form_widget(form._token) }}
{{ form_end(form) }}
