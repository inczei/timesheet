{{ form_start(form) }}
{{ form_errors(form) }}
<table>
	<tr>
		<td></td>
		<td>{{ form_label(form.name) }}{{ form_errors(form.name) }}</td>
		<td>{{ form_widget(form.name) }}</td>
		<td></td>
	</tr>
	{% if form.domainId is defined %}
	<tr>
		<td></td>
		<td>{{ form_label(form.domainId) }}{{ form_errors(form.domainId) }}</td>
		<td>{{ form_widget(form.domainId) }}</td>
		<td></td>
	</tr>
	{% endif %}
	<tr>
		<td></td>
		<td align="left">{{ form_widget(form.cancel) }}</td>
		<td align="right">{{ form_widget(form.submit) }}</td>
		<td></td>
	</tr>
</table>
{{ form_widget(form.id) }}
{{ form_widget(form._token) }}
{{ form_end(form) }}
